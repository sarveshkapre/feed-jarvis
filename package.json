{
  "name": "feed-jarvis",
  "version": "0.0.0",
  "description": "Persona-based post generator from structured event feeds (local-first).",
  "license": "MIT",
  "type": "module",
  "bin": {
    "feed-jarvis": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest run",
    "check": "npm run lint && npm run typecheck && npm test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@biomejs/biome": "^2.3.13",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
