{
  "name": "feed-jarvis",
  "version": "0.0.0",
  "description": "Local-first studio + CLI for turning RSS/JSON feeds into on-brand social drafts.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "feed-jarvis": "./dist/cli.js"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:web": "tsx src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "docs:check-links": "node scripts/docs-check-links.mjs",
    "security:grep": "node scripts/security-grep.mjs",
    "test": "vitest run",
    "smoke:web": "tsx scripts/smoke-web.ts",
    "e2e:web": "node --import tsx scripts/e2e-web.ts",
    "check": "npm run lint && npm run typecheck && npm test && npm run build",
    "release:check": "node scripts/release-check.mjs"
  },
  "dependencies": {
    "fast-xml-parser": "^5.0.0"
  },
  "overrides": {
    "esbuild": "^0.27.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^22.0.0",
    "playwright": "^1.58.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
